<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table table-dark">
  <thead>
  <style>
.hideextra { white-space: nowrap; overflow: hidden; text-overflow:ellipsis; }
</style>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Dairy free</th>
      <th>Gluten free</th>
      <th>Kosher</th>
      <th>Peanut free</th>
      <th>Vegan</th>
      <th>Vegetarian</th>
      <th>Available</th>
      <th>Catering</th>
      <th>Featured</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><div class="hideextra" style="width:200px"><%= product.description %></div></td>
        <td><%= product.price %></td>
        <td><%= product.dairy_free %></td>
        <td><%= product.gluten_free %></td>
        <td><%= product.kosher %></td>
        <td><%= product.peanut_free %></td>
        <td><%= product.vegan %></td>
        <td><%= product.vegetarian %></td>
        <td><%= product.available %></td>
        <td><%= product.catering %></td>
        <td><%= product.featured %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
